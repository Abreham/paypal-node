extends layout
block content
  #wrapper
         h1= title
         form(id='weather-form', method='post',action='/conditions')
             lable(for='state') State
             input(type='text',id='state',name='state')
             lable(for='city') City
             input(type='text',id='city',name='city')
             select(name='weather')
                 option(value='conditions') conditions
                 option(value='forecast') forecast
             input(type='submit',id='weathercheck',value='check')



     #weather-detail
         h2 Weather Details
         table
             thead
                 th Location
                 th Temperature &deg C
                 th Relative Humidity
                 th Pressure in Inches
                 th Visibility in Kilometers
             tbody
